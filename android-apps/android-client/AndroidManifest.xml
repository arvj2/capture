<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.claro.cfcmobile"
          android:versionCode="218"
          android:versionName="2.1.8">
    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="19"
            />


    <!-- PERMISSIONS-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application android:label="@string/app_name"
                 android:icon="@drawable/logo_claro"
                 android:theme="@style/Theme.AppCompat.Light"
            >

        <receiver android:name=".broadcast.DownloadBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>


        <!-- SERVICES -->
        <service android:name=".robospice.services.CfcService"
                 android:exported="false"/>

        <service android:name=".services.DIDownloaderService" android:exported="false"/>

        <!-- PROVIDERS -->
        <provider android:authorities="com.claro.cfcmobile"
                  android:name=".db.provider.DbProvider"
                  android:exported="false"/>


        <!-- ACTIVITIES -->
        <activity android:name=".activities.DispatchActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.LoginActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoTitleBar.FullScreen"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activities.HomeActivity"
                  android:screenOrientation="portrait"
                  android:launchMode="singleTop">
        </activity>

        <activity android:name=".activities.DispatchItemDetailsActivity"
                  android:parentActivityName="com.claro.cfcmobile.activities.HomeActivity"
                >

            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.claro.cfcmobile.activities.HomeActivity"/>
        </activity>

        <activity android:name=".activities.ConditionActivity"
                  android:theme="@style/Theme.AppCompat.Light.FullScreen"/>
        <activity
                android:name=".activities.BrowseableActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.ALTERNATIVE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="cfc" android:host="browse"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.prefs.CompactPreferenceActviity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activities.prefs.PreferenceActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".activities.FormActivity"
                  android:screenOrientation="portrait"/>

    </application>
</manifest>
